<div id="<%= dom_id group %>" class="container mb-3 d-flex border">
  <div class="image p-2">
    <%= image(group.image) %>
  </div>
  <div class="flex-fill p-2">
    <div class="d-flex justify-content-between">
      <p><%= group.name %></p>
      <p>$<%= group.transaction_sum %></p>

    </div>
    <p class="text-secondary">Transactions: <%= group.transaction_count %></p>
    <p class="text-secondary"><%= group.created_at.strftime('%d %b %Y') %></p>
  </div>
</div>
</div>
