<div id="<%= dom_id group %>" class="container mb-3 d-flex border">
  <div class="image p-2">
    <%= image(group.image) %>
  </div>
  <div class="flex-fill p-2">
    <div class="d-flex justify-content-between">
      <p><%= group.name %></p>

    </div>

    <p class="text-secondary"><%= group.created_at.strftime('%d %b %Y') %></p>
  </div>
</div>
  <%= link_to "Manage", group_path(group.id), class: "btn btn-outline-warning" %>
</div>
